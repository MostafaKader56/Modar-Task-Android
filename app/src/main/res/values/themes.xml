<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ModarTask" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ModarTask" parent="Base.Theme.ModarTask" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/routing_screen_back</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Required for animated icons. -->
        <!--        <item name="windowSplashScreenAnimationDuration">100</item>-->

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Base.Theme.ModarTask</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="CustomComponentSpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_custom_component_spinner_with_icon</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/grey_black</item>
    </style>

    <style name="CustomNumberPickerTheme" parent="Theme.Material3.Light" />

    <!-- Define a custom font families -->
    <style name="InterFontStyleRegular400">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="InterFontStyleMedium500">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="InterFontStyleSemiBold600">
        <item name="android:fontFamily">@font/inter_semi</item>
    </style>

    <style name="InterFontStyleBold700">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
</resources>